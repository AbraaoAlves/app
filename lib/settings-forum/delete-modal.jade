.content#forum-delete-modal
  form(method='delete', action='/api/forum/'+forum.attr('id'), autosubmit, autovalidate)
    .title=t('settings-forums.delete.confirmation.title')
      a(href='#').close.cancel
        | &times;
    .body
      p=t('settings-forums.delete.confirmation.body')
      p!=t('settings-forums.delete.confirmation.instructions', { domain: forum.attr('name') })
      .form-group
        input.forum-name.form-control(type='text', name='forum', autofocus, validate='equals:'+forum.attr('name'))
      .form-messages.hide
    .confirmation-actions
      button.btn-block.btn-danger.ok.main(disabled=true)=t('settings-forums.delete.confirmation.button-confirm')
